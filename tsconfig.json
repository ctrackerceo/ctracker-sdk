{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  "allowJs": true,
  // Evita que el compilador intente escribir archivos .js de salida encima de los .js fuente
  "noEmit": true,
    "types": []
  },
  "include": ["index.d.ts", "examples/**/*.*"],
  "exclude": ["node_modules", "dist"]
}
